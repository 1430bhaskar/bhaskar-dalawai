{% comment %}
Banner — Gift Guide
All editable:
- logo_text, top_tagline, heading, description, cta_text, cta_url, background_image, small_note
No jQuery. All styles scoped to this section.
{% endcomment %}

<section class="sg-banner-gift-guide" aria-label="Gift Guide Banner">
  <style>
    .sg-banner-gift-guide { position: relative; overflow: hidden; padding: 40px 0; font-family: system-ui, -apple-system, "Helvetica Neue", Arial; }
    .sg-banner-inner { max-width: 1280px; margin: 0 auto; display: flex; gap: 40px; align-items: center; padding: 0 20px; }
    .sg-banner-left { flex: 1 1 50%; padding: 40px 0; }
    .sg-logo { font-weight: 700; letter-spacing: .5px; margin-bottom: 8px; }
    .sg-top-tag { display:block; text-align:center; margin-bottom: 12px; color:#333; font-size:14px; }
    .sg-heading { font-size: 56px; line-height: 1; margin: 0 0 18px; font-weight:700; }
    .sg-desc { font-size:16px; color:#333; max-width:520px; margin-bottom:18px; }
    .sg-cta { display:inline-flex; align-items:center; gap:12px; padding:14px 24px; background:#111; color:#fff; text-decoration:none; font-weight:600; border-radius:2px; position:relative; }
    .sg-cta::after { content:"→"; transition: transform .25s ease; }
    .sg-cta:hover::after { transform: translateX(6px); }
    .sg-right { flex: 1 1 50%; min-height: 360px; background-size: cover; background-position: center; border-left: 1px solid rgba(0,0,0,0.03); }
    .sg-small-note { text-align:center; width:100%; padding:10px 0; border-top:1px solid #eee; font-size:12px; color:#444; margin-top:20px; background:#fafafa; }

    @media (max-width: 820px) {
      .sg-banner-inner { flex-direction: column-reverse; gap:20px; padding: 24px; }
      .sg-heading { font-size:34px; text-align:left; }
      .sg-right { width:100%; height:240px; }
      .sg-desc { font-size:15px; }
    }
  </style>

  <div class="sg-banner-inner">
    <div class="sg-banner-left">
      <div class="sg-logo">{{ section.settings.logo_text }}</div>
      <div class="sg-top-tag">{{ section.settings.top_tagline }}</div>

      <h1 class="sg-heading">{{ section.settings.heading }}</h1>
      <div class="sg-desc">{{ section.settings.description }}</div>

      {% if section.settings.cta_text != blank %}
        <a class="sg-cta" href="{{ section.settings.cta_url }}" aria-label="{{ section.settings.cta_text }}">
          <span>{{ section.settings.cta_text }}</span>
        </a>
      {% endif %}
    </div>

    <div class="sg-right" style="background-image: url({{ section.settings.background_image | img_url: '2048x' }});"></div>
  </div>

  <div class="sg-small-note">{{ section.settings.small_note }}</div>

  {% schema %}
  {
    "name": "Banner — Gift Guide",
    "settings": [
      { "type": "text", "id": "logo_text", "label": "Logo text", "default": "TISSO VISON" },
      { "type": "text", "id": "top_tagline", "label": "Top tagline", "default": "Find the ideal gift for your loved ones." },
      { "type": "text", "id": "heading", "label": "Heading", "default": "The Gift Guide" },
      { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
      { "type": "text", "id": "cta_text", "label": "CTA button text", "default": "SHOP NOW" },
      { "type": "url",  "id": "cta_url", "label": "CTA link", "default": "#" },
      { "type": "image_picker", "id": "background_image", "label": "Background image / illustration" },
      { "type": "text", "id": "small_note", "label": "Bottom small note", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
    ],
    "presets": [{ "name": "Gift Guide Banner", "category": "Custom" }]
  }
  {% endschema %}
</section>
