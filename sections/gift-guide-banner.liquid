{% comment %}
Gift Guide — Banner (Figma-tight)
• Top row (logo / message / yellow CTA) on #F5F5F5
• Mobile: logo centered + hamburger opens panel with message + CTA
• Hero uses full-width CSS background image (no inline <img>)
• Fonts: Jost (banner) pulled in from Google, Lustria used by grid CSS
{% endcomment %}

{{ 'gift-guide.css' | asset_url | stylesheet_tag }}

<section id="gift-guide-banner-{{ section.id }}" class="gift-guide-banner" role="region" aria-label="Gift Guide banner">

  <!-- Top row -->
  <div class="gg-topbar">
    <button class="gg-topbar__menu-btn" aria-label="Open menu" aria-controls="gg-topbar-panel" aria-expanded="false">
      <span class="gg-hamburger" aria-hidden="true"></span>
    </button>

    <div class="gg-topbar__logo">{{ section.settings.logo_text }}</div>

    <div class="gg-topbar__center">
      {{ section.settings.top_message }}
    </div>

    {% if section.settings.top_cta_link != blank %}
      <a class="gg-topbar__cta" href="{{ section.settings.top_cta_link }}">
        <span>{{ section.settings.top_cta_text }}</span>
        <svg class="gg-arrow" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
          <path d="M5 12h14M13 5l7 7-7 7" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {% endif %}
  </div>

  <!-- Mobile slide-down panel (message + yellow CTA) -->
  <div id="gg-topbar-panel" class="gg-topbar__panel" hidden>
    <p class="gg-topbar__panel-text">{{ section.settings.top_message }}</p>
    {% if section.settings.top_cta_link != blank %}
      <a class="gg-topbar__panel-cta" href="{{ section.settings.top_cta_link }}">
        <span>{{ section.settings.top_cta_text }}</span>
        <svg class="gg-arrow" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
          <path d="M5 12h14M13 5l7 7-7 7" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {% endif %}
  </div>

  <!-- Hero with background image -->
  {% assign bg = section.settings.hero_image | img_url: '2000x' %}
  <div class="gg-hero" style="--gg-hero-bg: url('{{ bg }}')">
    <div class="gg-hero__content">
      <h1 class="gg-hero__title">{{ section.settings.heading }}</h1>
      {% if section.settings.subheading != blank %}
        <p class="gg-hero__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
      {% if section.settings.cta_link != blank %}
        <a class="gg-btn" href="{{ section.settings.cta_link }}">
          <span>{{ section.settings.cta_text }}</span>
          <svg class="gg-arrow" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
            <path d="M5 12h14M13 5l7 7-7 7" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.bottom_ribbon_text != blank %}
    <div class="gg-ribbon">{{ section.settings.bottom_ribbon_text }}</div>
  {% endif %}
</section>



{% schema %}
{
  "name": "Gift Guide — Banner",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo text (top-left)", "default": "TISSO VISON" },
    { "type": "text", "id": "top_message", "label": "Top center message", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "top_cta_text", "label": "Top-right button text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "top_cta_link", "label": "Top-right button link", "default": "/collections/all" },

    { "type": "image_picker", "id": "hero_image", "label": "Hero background image" },

    { "type": "text", "id": "heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "cta_text", "label": "Main CTA text", "default": "SHOP NOW" },
    { "type": "url", "id": "cta_link", "label": "Main CTA link", "default": "/collections/all" },

    { "type": "text", "id": "bottom_ribbon_text", "label": "Bottom ribbon text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [
    { "name": "Gift Guide — Banner" }
  ]
}
{% endschema %}
