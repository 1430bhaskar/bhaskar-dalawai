{% comment %}
  Gift Guide — Banner Section (from scratch)
  - Top bar: left logo text, center small message, right CTA (all editable)
  - Main hero: heading, subheading, CTA button with arrow animation
  - Optional hero illustration/image
  - Bottom ribbon text
  Notes:
  - Loads gift-guide.css once via stylesheet_tag
  - No Dawn components used
{% endcomment %}

{{ 'gift-guide.css' | asset_url | stylesheet_tag }}

<section id="gift-guide-banner-{{ section.id }}"
  class="gift-guide-banner"
  aria-label="Gift Guide banner"
>
  <!-- Top bar -->
  <div class="gg-topbar">
    <div class="gg-topbar__left" aria-label="Brand">
      {{ section.settings.logo_text }}
    </div>

    <div class="gg-topbar__center">
      {{ section.settings.top_message }}
    </div>

    {% if section.settings.top_cta_link != blank %}
      <a class="gg-topbar__cta" href="{{ section.settings.top_cta_link }}" aria-label="{{ section.settings.top_cta_text }}">
        <span>{{ section.settings.top_cta_text }}</span>
        <span class="gg-arrow" aria-hidden="true">→</span>
      </a>
    {% endif %}
  </div>

  <!-- Main hero -->
  <div class="gg-hero">
    <div class="gg-hero__content">
      <h1 class="gg-hero__title">{{ section.settings.heading }}</h1>
      {% if section.settings.subheading != blank %}
        <p class="gg-hero__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.cta_link != blank %}
        <a class="gg-btn" href="{{ section.settings.cta_link }}">
          <span>{{ section.settings.cta_text }}</span>
          <svg class="gg-btn__arrow" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
            <path d="M12 4l8 8-8 8M4 12h16" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}
    </div>

    {% if section.settings.hero_image %}
      <div class="gg-hero__image">
        <img
          src="{{ section.settings.hero_image | img_url: '1200x' }}"
          alt="{{ section.settings.hero_image_alt | default: section.settings.heading | escape }}">
      </div>
    {% endif %}
  </div>

  {% if section.settings.bottom_ribbon_text != blank %}
    <div class="gg-ribbon" role="note">
      {{ section.settings.bottom_ribbon_text }}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Gift Guide — Banner",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo text (top-left)", "default": "TISSO VISON" },
    { "type": "text", "id": "top_message", "label": "Top center message", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "top_cta_text", "label": "Top-right button label", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "top_cta_link", "label": "Top-right button link", "default": "#" },

    { "type": "text", "id": "heading", "label": "Hero heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subheading", "label": "Hero subheading", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "cta_text", "label": "Hero button label", "default": "SHOP NOW" },
    { "type": "url", "id": "cta_link", "label": "Hero button link", "default": "#gift-guide-grid-anchor" },

    { "type": "image_picker", "id": "hero_image", "label": "Hero image (optional)" },
    { "type": "text", "id": "hero_image_alt", "label": "Hero image alt text", "default": "Gift Guide hero artwork" },

    { "type": "text", "id": "bottom_ribbon_text", "label": "Bottom ribbon text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [
    { "name": "Gift Guide — Banner" }
  ]
}
{% endschema %}
